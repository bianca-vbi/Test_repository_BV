@article{hurst_natural_nodate,
	title = {Natural {Capital} {Accounting}, {Carbon} {Markets} \& {Social}-{Environmental} {Governance}: {A} {Marxist} {Political} {Ecology} {Interrogation}},
	abstract = {The core argument of this dissertation is the rise of natural capital accounting (NCA) illustrates how capitalist political economy and Nature, including social-environmental movements, are shaping each other – materially, imaginatively and discursively. By interrogating the United Nation’s System of Environment-Economic-Accounting – Experimental Ecosystem Accounting (SEEA-EEA, 2012), The Economics of Ecosystems and Biodiversity (TEEB, 2010) and how NCA plays out in practice with a case study of carbon markets in Uganda, the following will evaluate the compatibility of NCA with inclusive socioenvironmental governance. Building and transcending from academic literature, the dissertation adopts a Marxist political ecology critical lens to evaluate neoliberal environmental governance, demonstrating the continued relevance of Marxian subsumption and metabolic rift theory to political ecology and introduce the discursive subsumption of nature to enrich scholarship. However, as Marxism is both an essential yet insufficient theoretical approach when used alone, additional insights are adopted from poststructural, postcolonial, and (eco)feminist scholarship to overcome Marx’s blind spots. Empirical research into forest carbon markets in Uganda elucidates flaws in emissions trading whilst pose a neocolonial regime of eco-governmentality that marginalizes alternative ontologicalepistemologies of nature’s value, beyond anthropocentrism. The dissertation concludes with a manifesto of suggestions to help overcome weaknesses of NCA and so improve its compatibility with inclusive socioenvironmental governance.},
	language = {en},
